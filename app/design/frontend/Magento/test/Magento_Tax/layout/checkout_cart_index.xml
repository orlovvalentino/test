<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="you-save" xsi:type="array">
                                    <item name="component"  xsi:type="string">Magento_Tax/js/view/cart/you-save</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Magento_Tax/summary/you-save</item>
                                        <item name="exclTaxLabel" xsi:type="string" translate="true">Order Total Excl. Tax</item>
                                        <item name="inclTaxLabel" xsi:type="string" translate="true">Order Total Incl. Tax</item>
                                        <item name="title" xsi:type="string" translate="true">You Save</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
